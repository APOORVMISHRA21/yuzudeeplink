<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dialog_padding"
            android:paddingEnd="@dimen/dialog_padding"
            android:paddingTop="@dimen/dialog_padding_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userjs_info_name"
            android:textAppearance="@style/TextAppearance.ListBody"/>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.ListTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userjs_info_version"
            android:textAppearance="@style/TextAppearance.ListBody"/>

        <TextView
            android:id="@+id/versionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.ListTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userjs_info_author"
            android:textAppearance="@style/TextAppearance.ListBody"/>

        <TextView
            android:id="@+id/authorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.ListTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userjs_info_description"
            android:textAppearance="@style/TextAppearance.ListBody"/>

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.ListTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userjs_info_include"
            android:textAppearance="@style/TextAppearance.ListBody"/>

        <TextView
            android:id="@+id/includeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.ListTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userjs_info_exclude"
            android:textAppearance="@style/TextAppearance.ListBody"/>

        <TextView
            android:id="@+id/excludeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.ListTitle"/>
    </LinearLayout>

</ScrollView>