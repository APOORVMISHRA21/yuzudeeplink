<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/pref_about">
    <Preference
        android:title="@string/browser_app_name"
        android:summary="@string/copyright"
        app:iconSpaceReserved="false" />
    <Preference
        android:key="version"
        android:title="@string/version"
        app:iconSpaceReserved="false" />
    <Preference
        android:key="build"
        android:title="@string/build"
        app:iconSpaceReserved="false" />
    <Preference
        android:key="build_time"
        android:title="@string/build_time"
        app:iconSpaceReserved="false" />
    <Preference
        android:key="osl"
        android:title="@string/open_source_license"
        app:iconSpaceReserved="false" />
    <Preference
        android:key="translation"
        android:title="@string/pref_translation"
        android:summary="@string/pref_translators"
        app:iconSpaceReserved="false" />
    <Preference
        android:key="privacy_policy"
        android:title="@string/pref_privacy_policy"
        app:iconSpaceReserved="false" />
    <SwitchPreferenceCompat
        android:key="send_usage"
        android:title="@string/pref_send_usage"
        android:summary="@string/pref_send_usage_summary"
        android:defaultValue="true"
        app:iconSpaceReserved="false" />

</PreferenceScreen>
